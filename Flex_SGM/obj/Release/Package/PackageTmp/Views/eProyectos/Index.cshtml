@model IEnumerable<Flex_SGM.Models.eProyectos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Proyectos</h2>

<p>
    @if (ViewBag.super == true)
    {
        @Html.ActionLink("Crear Nuevo", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Clientes.Cliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Proyecto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Clientes.Cliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Proyecto)
        </td>
        <td>
            @if (ViewBag.super == true)
            {
                @Html.ActionLink("Editar", "Edit", new { id = item.ID })
            } |
            @Html.ActionLink("Detalles", "Details", new { id = item.ID }) |
            @if (ViewBag.super == true)
            {
                @Html.ActionLink("Eliminar", "Delete", new { id = item.ID })
            }
        </td>
    </tr>
}

</table>
