@model IEnumerable<Flex_SGM.Models.AndonDefecto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutC.cshtml";
}

<h2>Defectos</h2>
<a href="/bitacora/Evidence/Quality/Estandar/Lista de defectos por area.pdf" target="_blank">Lista de Codigos de Clasificacion</a>
<div>
    @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @onclick = "$('#loadingImg').show();", @class = "btn btn-primary" })
    @Html.ActionLink("Registro de Andon v2", "Index", "CAndons2", null, htmlAttributes: new { @onclick = "$('#loadingImg').show();", @class = "btn btn-default" })
</div>
<div class="col-xs-6">
    @Html.ActionLink("Clientes", "Index", "cClientes", null, htmlAttributes: new { @class = "btn btn-default", @onclick = "$('#loadingImg').show();" })
    @Html.ActionLink("Proyectos", "Index", "cProyectos", null, htmlAttributes: new { @class = "btn btn-default", @onclick = "$('#loadingImg').show();" })
    @Html.ActionLink("Areas", "Index", "cAreas", null, htmlAttributes: new { @class = "btn btn-default", @onclick = "$('#loadingImg').show();" })
    @Html.ActionLink("Defectos", "Index", "AndonDefectoes", null, htmlAttributes: new { @class = "btn btn-default", @onclick = "$('#loadingImg').show();" })
    @Html.ActionLink("Supervisores", "Index", "AndonSupervisores", null, htmlAttributes: new { @class = "btn btn-default", @onclick = "$('#loadingImg').show();" })
    @Html.ActionLink("Auditores", "Index", "AndonAuditors", null, htmlAttributes: new { @class = "btn btn-default", @onclick = "$('#loadingImg').show();" })
</div>
<div class="x_panel">
    <table class="table table-bordered table-striped clearfix" style="width:100%" id="tablecomm">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Areas.Area)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Defecto)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Areas.Area)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Defecto)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>