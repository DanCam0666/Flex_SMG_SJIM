<h4>Lista de Roles</h4>
<table class="table table-striped">

    @foreach (string x in ViewBag.AllRoles)
    {
        if (!String.IsNullOrEmpty(x))
        {
            <tr>
                <td>
                    @Html.Label(x)
                </td>
            </tr>
        }
    }
</table>

<h4>Lista de Logins</h4>
<table class="table table-striped">

    @foreach (var item in Model.Logins)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LoginProvider)
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn" }) |
