                        data: @Html.Raw(Json.Encode(ViewBag.ChartData12)),
                    }
                ]
            },
            options: {
                legend: { display: true },
                title: {
                    display: true,
                    text: 'Customer Complaints ( Eng )'
                }
            }
        });
    </script>
}