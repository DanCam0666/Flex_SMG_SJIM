@model IEnumerable<Flex_SGM.Models.Junta>

@{
    ViewBag.Title = "Index";
}

<h2>Registros diarios</h2>

    <h1>
        @Html.ActionLink("Crear Nuevo Registro", "Create")
    </h1>
<br />
<br />
<br />
@using (Html.BeginForm("fileud", "Juntas", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <label>-Video De pantalla Principal- (Solo *.mp4 Generado con PPT y 4Mb Maximo )</label>
    <input type="file" name="someFile" />

    <input type="submit" value="Upload" name="UploadButton" id="UploadButton" />
    @ViewBag.Message
}
<br />
<br />
<br />
<table class="table table-bordered table-striped clearfix" style="width:100%" id="juntas">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>Menu</th>
            <th>
                @Html.DisplayNameFor(model => model.FechaHora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Accidente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dia_Accidente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OILSSeguridad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OILSnuevosproyectos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Oshas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RelevanteSafety)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToC_Pendientes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vacaciones)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preventivos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.comentariosa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.comentarios)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.comentarios2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.comentarios3)
            </th>

        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaHora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Accidente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dia_Accidente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OILSSeguridad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OILSnuevosproyectos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Oshas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RelevanteSafety)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToC_Pendientes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vacaciones)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preventivos)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.comentariosa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.comentarios)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.comentarios2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.comentarios3)
            </td>
        </tr>
        }
    </tbody>
</table>

