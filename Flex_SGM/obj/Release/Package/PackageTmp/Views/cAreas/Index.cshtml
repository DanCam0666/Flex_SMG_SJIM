@model IEnumerable<Flex_SGM.Models.cAreas>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutC.cshtml";
}

<h2>Index</h2>

<div>
    @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @onclick = "$('#loadingImg').show();", @class = "btn btn-default" })
</div>
<div>@Html.ActionLink("Registro de Andon v2", "Index", "CAndons2", null, htmlAttributes: new { @onclick = "$('#loadingImg').show();", @class = "btn btn-default" })</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Area)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Area)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
