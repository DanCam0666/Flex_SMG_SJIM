@model IEnumerable<Flex_SGM.Models.cAreas>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCE.cshtml";
}

<h2>Areas</h2>

<div class="col-md-6">

    <div class="x_panel">
        <h4>APARTADOS COMPARTIDOS CON CALIDAD-INGENIERIA</h4>
        @Html.ActionLink("Clientes", "Index", "cClientes", null, htmlAttributes: new { @class = "btn btn-default", @onclick = "$('#loadingImg').show();" })
        @Html.ActionLink("Proyectos", "Index", "cProyectos", null, htmlAttributes: new { @class = "btn btn-default", @onclick = "$('#loadingImg').show();" })
        @Html.ActionLink("Areas", "Index", "cAreas", null, htmlAttributes: new { @class = "btn btn-default", @onclick = "$('#loadingImg').show();" })
    </div>
</div>
<div class="x_panel">
    <div class="x_title clearfix">
        <div class="col-md-6">
            <h3>Listado de Areas </h3>
            <div>@Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @onclick = "$('#loadingImg').show();", @class = "btn btn-primary" })</div>
        </div>
    </div>
    <div class="x_content">
        <table class="tabled table-bordered table-striped clearfix" style="width:100%" id="tablecomm">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Area)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Area)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>