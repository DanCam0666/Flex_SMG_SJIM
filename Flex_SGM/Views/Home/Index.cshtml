@model IEnumerable<Flex_SGM.Models.Sugerencias>

@{
    ViewBag.Title = "Inicio";
}
<style>
    .wrap {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .button {
        width: 50px;
        height: 50px;
        font-family: 'Roboto', sans-serif;
        font-size: 22px;
        text-transform: uppercase;
        letter-spacing: 0px;
        font-weight: 500;
        color: #000;
        background-color: #fff;
        border: none;
        border-radius: 45px;
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.5s ease 0s;
        cursor: pointer;
        outline: none;
    }
        .button:hover {
            background-color: #6dbcff;
            box-shadow: 0px 15px 20px rgb(0,0,0);
            color: #fff;
            transform: translateY(-3px);
        }
    .feedback {
        background-color: #31B0D5;
        color: white;
        padding: 10px 15px;
        border-radius: 50%;
        border-color: #46b8da;
        position: fixed;
        bottom: 20px;
        right: 30px;
        text-shadow: 5px 5px 10px black;
    }
    .resizable-input {
        /* make resizable */
        border: 1px solid;
        padding: 1px;
        width: 300px;
        resize: both;
        overflow: auto;
    }
    /* let <input> assume the size of the wrapper */
    .resizable-input > input {
        width: 100%;
        box-sizing: border-box;
        margin: 0;
    }
    /* add a visible handle */
    .resizable-input > after {
        display: inline-block;
        vertical-align: bottom;
        margin-left: -16px;
        width: 16px;
        height: 16px;
        background-image: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABAAAAAQCAQAAAC1+jfqAAAAJUlEQVR4AcXJRwEAIBAAIPuXxgiOW3xZYzi1Q3Nqh+bUDk1yD9sQaUG/4ehuEAAAAABJRU5ErkJggg==");
        cursor: ew-resize;
    }    
    #modalPoll {
    position: fixed;
    bottom: 4px;
    right: 10px;
    }
</style>

@*Modal: modalPoll*@
<div class="modal right fade" id="modalPoll" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true" data-backdrop="false">
    <div class="modal-dialog modal-notify modal-info" role="document">
        <div class="modal-content" style="background-color: #edf3f9">
            <div>
                <div class="modal-header bg-primary">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" class="white-text">&#x274C</span>
                    </button>
                    <center class="heading lead" style="margin-left: 70px; font-size: x-large">
                        Solicitud de Comentarios
                    </center>
                </div>
            </div>
            <div class="modal-body" style="color: #337ab7; text-align:left; margin-left: 30px">
                <div class="text-center">
                    <i class="fa fa-file-text-o fa-4x mb-3 animated rotateIn"></i>
                    <h3>
                        <strong>Su Opinión Importa</strong>
                    </h3>
                    <p>
                        ¿Tiene algunas ideas como mejorar esta aplicación?
                        <strong>Da su opinión.</strong>
                    </p>
                </div>
                <hr>
                <Radio>
                    <fieldset>
                        <legend style="text-align: center; color: #337ab7;">Su Clalificación</legend>
                        <div style="margin-left: 160px" class="col-md-12">
                            <input type="radio" name="type" id="Muy_Bien" value="Muy_Bien" checked /><label for="Muy_Bien">&nbsp; Muy Bien</label><br />
                            <input type="radio" name="type" id="Bien" value="Bien" /><label for="Bien">&nbsp; Bien</label><br />
                            <input type="radio" name="type" id="Mediocre" value="Mediocre" /><label for="Mediocre">&nbsp; Mediocre</label><br />
                            <input type="radio" name="type" id="Mal" value="Mal" /><label for="Mal">&nbsp; Mal</label><br />
                            <input type="radio" name="type" id="Muy_Mal" value="Muy_Mal" /><label for="Muy_Mal">&nbsp; Muy Mal</label><br />
                        </div>
                        <hr />
                    </fieldset>
                </Radio>
                <h4 class="text-center">
                    <strong>¿Qué podríamos mejorar?</strong>
                </h4>
                <hr />
                @*Basic text area*@
            <div class="col-md-11">
                <label for="Comentarios"> Comentarios: &nbsp;</label>
                <span class="resizable-input"><input type="text" data-bind="modalPoll" name="Comentarios" id="Comentarios" value="" /></span><br />
            </div>
                <br />
                <br />
                <hr />
                <div class="modal-footer justify-content-center">
                    <a button id="submit" data-bind="modalPoll" class="btn btn-primary waves-effect waves-light" data-dismiss="modal">
                        Enviar
                        <i class="fa fa-paper-plane ml-1"></i>
                    </a>
                    <a button class="btn btn-default waves-effect" data-dismiss="modal">Cancelar</a>
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>
@*Modal: modalPoll*@

<section id="BigVideo">
    <!--- FullScreenVideo   --->
    <video controls autoplay loop poster="/bitacora/img/automatizacion.png" height="650" style="background:black">
        <source src="/bitacora/vids/flexm.mp4" type="video/mp4">
    </video>
    <!--     <div class="Overlay"></div>  --->
</section>
    <div class="wrap">
        <a button id="feedback" data-bind="modalPoll" class="button feedback">
        <i class="fa fa-comments ml-0"></i></a>
    </div>
@section Scripts {

    <script>

        $('#modalPoll').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget) 
            var recipient = button.data('whatever') 
            var modal = $(this)
            modal.find('.modal-title').text('New message to ' + recipient)
            modal.find('.modal-body input').val(recipient)
        })

        $('#feedback').click(function () {
            $('#modalPoll').modal('show');
        });

        var realizada = 0;
        var sinfecha = 0;
        var ConFecha = 0;
        var Fechaprox = 0;
        var NoReali = 0;
        var Urgente = 0;
        var cuser = '@ViewBag.cuser';

        if (@ViewBag.realizada != 0)
            realizada = @ViewBag.realizada;
        if (@ViewBag.sinfecha != 0)
            sinfecha = @ViewBag.sinfecha;
        if (@ViewBag.ConFecha != 0)
            ConFecha = @ViewBag.ConFecha;
        if (@ViewBag.Fechaprox != 0)
            Fechaprox = @ViewBag.Fechaprox;
        if (@ViewBag.NoReali != 0)
            NoReali = @ViewBag.NoReali;
        if (@ViewBag.Urgente != 0)
            Urgente = @ViewBag.Urgente;

        //PNotify.defaults.delay = 5000;

        $(document).ready(function () {
            if (cuser != "") {

                window.notice2 = PNotify.notice({
                    title: 'Estatus de OILs',
                    text: 'Recuerda Verificar y actualizar los OILs asignados... ' + "\n" + 'Tienes: ' + "\n" + Urgente + ' Urgente ,' + "\n" + NoReali + ' No Realizado ,' + "\n" + sinfecha + ' Sin fecha compromiso ,' + "\n" + Fechaprox + ' Con fecha proxima ,' + "\n" + ConFecha + ' En Proceso ,' + "\n" + realizada + ' Finalizados.',
                    width: '600px',
                    icon: 'fas fa-info-circle',
                    hide: false,
                    stack: {
                        'modal': true,
                        'overlayClose': true
                    },
                    modules: {
                        Confirm: {
                            confirm: true,
                            buttons: [{
                                text: 'Enterado ',
                                primary: true,
                                click: function (notice) {
                                    notice.close();
                                }
                            }]
                        },
                        Buttons: {
                            closer: false,
                            sticker: false
                        },
                        History: {
                            history: false
                        }
                    }
                });
            }
            else {
                window.notice = PNotify.error({
                    title: 'OILs Abiertos General',
                    text: 'Existen: ' + "\n" + Urgente + ' Urgente ,' + "\n" + + NoReali + ' No Realizado ,' + "\n" + sinfecha + ' Sin fecha compromiso ,' + "\n" + Fechaprox + ' Con fecha proxima ,' + "\n" + ConFecha + ' En Proceso ,' + "\n" + realizada + ' Finalizados.' + "\n" + ' Esta Ventana se Cierra con un Click',
                    //  addClass: 'nonblock',
                    width: '600px',
                    mouseReset: false,
                    hide: false,
                    stack: {
                        'modal': true,
                        'overlayClose': true
                    },
                    modules: {
                        Buttons: {
                            closer: false,
                            sticker: false
                        },
                        Mobile: {
                            swipeDismiss: false
                        }
                    }
                });
                window.notice.on('click', function () {
                    window.notice.close();
                });
            }
        });

    </script>

}