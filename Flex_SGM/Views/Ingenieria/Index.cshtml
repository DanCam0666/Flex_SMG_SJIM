@model Flex_SGM.Models.Sugerencias
@{
    ViewBag.Title = "Ingenieria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<Center class="clearfix">
    <hr />
    <hr />
    <!-- Flex container for both columns -->
    <div class="flex-container">
        <!-- First Column -->
        <div class="x_panel column-panel">
            <h3 style="font-size: 24px; text-align: center; font-weight:bold;">Documentos</h3>
            <div class="button-container">
                <div>@Html.ActionLink("PCRs", "Index", "PCRs", null, htmlAttributes: new { @onclick = "$('#loadingImg').show();", @class = "btn btn-primary action-btn" })</div>
                <div>@Html.ActionLink("Future Docs 1", "#", null, htmlAttributes: new { @class = "btn btn-primary action-btn" })</div>
                <div>@Html.ActionLink("Future Docs 2", "#", null, htmlAttributes: new { @class = "btn btn-primary action-btn" })</div>
                <div>@Html.ActionLink("Future Docs 3", "#", null, htmlAttributes: new { @class = "btn btn-primary action-btn" })</div>
                <div>@Html.ActionLink("Future Docs 4", "#", null, htmlAttributes: new { @class = "btn btn-primary action-btn" })</div>
            </div>
        </div>

        @if (ViewBag.super)
        {
            <!-- Second Column -->
            <div class="x_panel column-panel">
                <h3 style="font-size: 24px; text-align: center; font-weight:bold;">Configuraciones</h3>
                <div class="button-container">
                    <div>@Html.ActionLink("PCR Reasons", "Index", "ereasons", null, htmlAttributes: new { @onclick = "$('#loadingImg').show();", @class = "btn btn-primary action-btn" })</div>
                    <div>@Html.ActionLink("PCR Matriz de Decisión", "Index", "MatrizDecisions", null, htmlAttributes: new { @onclick = "$('#loadingImg').show();", @class = "btn btn-primary action-btn" })</div>
                    <div>@Html.ActionLink("PCR Originators", "Index", "eoriginators", null, htmlAttributes: new { @onclick = "$('#loadingImg').show();", @class = "btn btn-primary action-btn" })</div>
                    <div>@Html.ActionLink("Clientes", "Index", "eClientes", null, htmlAttributes: new { @class = "btn btn-primary action-btn", @onclick = "$('#loadingImg').show();" })</div>
                    <div>@Html.ActionLink("Proyectos", "Index", "eProyectos", null, htmlAttributes: new { @class = "btn btn-primary action-btn", @onclick = "$('#loadingImg').show();" })</div>
                    <div>@Html.ActionLink("Areas", "Index", "eAreas", null, htmlAttributes: new { @class = "btn btn-primary action-btn", @onclick = "$('#loadingImg').show();" })</div>
                </div>
            </div>
        }
    </div>
    <br>
    <br>
</Center>

<!-- Modal remains unchanged -->
@*Modal: modalPoll*@
<div class="modal right fade" id="modalPoll" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true" data-backdrop="false">
    <!-- Modal content remains the same -->
</div>

<style>
    .flex-container {
        display: flex;
        justify-content: space-between;
        align-items: stretch;
        margin: 0 auto;
        max-width: 1000px;
    }

    .column-panel {
        background-color: #edf3f9;
        border: 1px solid darkgray;
        padding: 20px;
        width: 48%;
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        min-height: 500px;
        margin-right: 10px;
        border-radius: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    }

    .flex-container > .column-panel:last-child {
        margin-right: 0;
    }

    .button-container {
        margin-top: 10px;
    }

    .action-btn {
        width: 100%;
        display: block;
        margin: 10px 0;
        text-align: center;
        font-size: 20px;
        border-radius: 15px;
        font-weight: 500;
        font-family: 'Calibri Light', sans-serif;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    }

    /* Additional styles for the modal if needed */
    .modal .modal-content {
        border-radius: 20px;
    }
</style>    