@model IEnumerable<Flex_SGM.Models.CDockaudit>
@{
    Layout = "~/Views/Shared/_LayoutC.cshtml";
}
@{
    ViewBag.Title = "DocksAudit";
}

<div class="clearfix">
    @using (Html.BeginForm())
    {
        <div class="col-xs-12 ">
            <center><h2>DockAudit's</h2></center>
            <div class="x_panel">
                <div class="x_title clearfix">
                    <div class="col-xs-12">
                        <div class="col-xs-6">
                            <div class="input-daterange input-group col-lg-offset-2 col-xs-10" id="bs_datepicker_range_container">

                                <label for="FechaInicial">Fecha Inicial...</label>
                                <input type="text" class="form-control" name="dti" value=@ViewBag.datei autocomplete="off">

                                <span class="input-group-addon">- A -</span>

                                <label for="FechaFinal">Fecha Final...</label>
                                <input type="text" class="form-control" name="dtf" value=@ViewBag.datef autocomplete="off">

                            </div>
                        </div>

                        <div class="form-group col-xs-2">
                            <label for="tipor">Mostrar por:</label>
                            <div class="col-md-10" data-toggle="tooltip" title=" Filtro para el pareto ">
                                @Html.DropDownList("btn", null, htmlAttributes: new { @class = "form-control" })

                            </div>
                        </div>

                        <div class="form-group col-xs-2">
                            <label for="tipor">Pareto por:</label>
                            <div class="col-md-10" data-toggle="tooltip" title=" Filtro para el pareto ">
                                @Html.DropDownList("paret", null, htmlAttributes: new { @class = "form-control" })

                            </div>
                        </div>

                    </div>

                </div>
                <div class="x_content">
                    <center>
                        <div class="col-lg-offset-3 col-xs-9">

                            @Html.ActionLink("Menu Calidad", "Index", "Calidad", null, htmlAttributes: new { @class = "btn btn-default", @onclick = "$('#loadingImg').show();" })

                            <input class="btn btn-primary col-xs-2" onclick="$('#loadingImg').show();" type="submit">


                            <div class="col-xs-2">
                                @Html.ActionLink("Registrar nuevo DockAudit", "Create", null, new { @class = "btn btn-danger", @onclick = "$('#loadingImg').show();" })
                            </div>

                            @Html.ActionLink("Menu Calidad", "Index", "Calidad", null, htmlAttributes: new { @class = "btn btn-default", @onclick = "$('#loadingImg').show();" })
                        </div>
                    </center>
                </div>
            </div>

        </div>
    }
    <div class="col-xs-8" style="float:left">
        <div class="x_panel">
            <div class="x_title clearfix">
                <h2> DocksAudit del @ViewBag.dx</h2>
            </div>
            <div class="x_content">
                <canvas id="chartme" width="100" height="35"></canvas>
            </div>
        </div>
    </div>


    <div class="col-xs-4" style="float:left">
        <div class="x_panel">
            <div class="x_title clearfix">
                <h2> Pareto</h2>
            </div>
            <div class="x_content">
                <canvas id="charttimee" width="100" height="74"></canvas>
            </div>
        </div>
    </div>


    <div class="col-xs-12 ">
        <div class="x_panel">
            <div class="x_title clearfix">
                <h2> Lista de DockAudit del @ViewBag.dx</h2>
            </div>
            <div class="x_content ">
                <table class="table table-bordered table-striped clearfix" style="width:100%" id="tableq">
                    <thead>
                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.Fecha)
                            </th>
                            <th>Menu</th>
                            <th>
                                @Html.DisplayNameFor(model => model.NoDockAudit)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Turno)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NoDeParte)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Area)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cantidad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.lote)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.cliente)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Clasificacion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AreaOrigen)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SupOrigen)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SupRecibio)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AuditorReporto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Comentarios)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.a1d)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.a5d)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.a10d)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.a20d)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.a30d)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.a1why)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.a2why)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.a3why)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.a4why)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.a5why)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.acausa)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.aaccion)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>

                            <td>
                                @item.Fecha.ToString("yyyy/MM/dd")
                            </td>
                            <td>
                                @Html.ActionLink("Exportar", "ExportFormat", new { id = item.ID }, new { @class = "btn btn-success", @target = "_blank" })
                                @Html.ActionLink("Detalles", "Details", new { id = item.ID }, new { @class = "btn  btn-primary", @target = "_blank" })
                                @Html.ActionLink("Editar", "Edit", new { id = item.ID }, new { @class = "btn  btn-warning", @target = "_blank" })
                                @Html.ActionLink("Borrar", "Delete", new { id = item.ID }, new { @class = "btn  btn-danger" })
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NoDockAudit)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Turno)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NoDeParte)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Area)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cantidad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.lote)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.cliente)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Clasificacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AreaOrigen)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupOrigen)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupRecibio)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AuditorReporto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Comentarios)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.a1d)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.a5d)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.a10d)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.a20d)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.a30d)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.a1why)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.a2why)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.a3why)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.a4why)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.a5why)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.acausa)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.aaccion)
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>

</div>
@section Scripts {

    <script>

                                        Chart.defaults.global.defaultFontSize= 18;
                    Chart.helpers.merge(Chart.defaults.global.plugins.datalabels, {
                           align: 'top',
                        anchor: 'center',
                           clam:'true',
                        offset: 0,
                           color: '#000000'
});

        var barChartqe =
        {
              labels: [@Html.Raw(ViewBag.labelsgrap)],
            datasets: [
                {
                    type: 'line',
                    label: 'Tendencia',
                    data:[@ViewBag.data2sgrap],
                    backgroundColor: "#8CB06B",
                    borderColor: "#aa0909",
                    borderWidth: 2,
                    fill: false
                }
                ,
                {
                    type: 'bar',
                    label: 'Eventos por @ViewBag.dxx',
                    data: [@ViewBag.datasgrap],
                    backgroundColor: "#FFA500",
                    borderWidth: 2
                }]
        };
        var barChartDqe1 =
        {
              labels: [@Html.Raw(ViewBag.labelsgrap2)],
