            });


            var ctqx = document.getElementById('chartme');
            var myChartqe1 = new Chart(ctqx, {
                type: 'bar',
                data: barChartqe,
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
