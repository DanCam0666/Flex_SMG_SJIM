@model IEnumerable<Flex_SGM.Models.Maquinas>

@{
    ViewBag.Title = "Maquinas";
}

<h2>Maquinas</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="x_panel">
    <table class="tabled table-bordered table-striped table-responsive" style="width:100%" id="maquinas">
        <thead>
            <tr>
                <th>Menu</th>
                <th>
                    @Html.DisplayNameFor(model => model.Area)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cliente)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Codigo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Critica)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Maquina)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubMaquina)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DiaHora)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ubicacion)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.ID }, new { @class = "btn  btn-success", @target = "_blank" })
                    @Html.ActionLink("Detalles", "Details", new { id = item.ID }, new { @class = "btn  btn-primary", @target = "_blank" })
                    @Html.ActionLink("Borrar", "Delete", new { id = item.ID }, new { @class = "btn  btn-warning" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Area)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Critica)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Maquina)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubMaquina)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaHora)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ubicacion)
                </td>


            </tr>
            }
        </tbody>
    </table>
</div>