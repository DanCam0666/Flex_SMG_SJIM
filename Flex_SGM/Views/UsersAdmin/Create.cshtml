@model Flex_SGM.Models.RegisterViewModel
@{
    ViewBag.Title = "Crear";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>
<div class="row clearfix">
    <center> @{Html.RenderPartial("_Result");}</center>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

<fieldset class="form-horizontal">
    <legend>Crear usuario nuevo.</legend>
    <div class="control-group">
        @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(m => m.UserName)
        </div>
    </div>
    <div class="control-group">
        @Html.LabelFor(m => m.UserFullName, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(m => m.UserFullName)
        </div>
    </div>
    <div class="control-group">
        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
        <div class="controls">
            @Html.PasswordFor(m => m.Password)
        </div>
    </div>
    <div class="control-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
        <div class="controls">
            @Html.PasswordFor(m => m.ConfirmPassword)
        </div>
    </div>

    <div class="control-group">
        @Html.LabelFor(m => m.Nomina, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(m => m.Nomina)
        </div>
    </div>
    <hr />
    <h4>Seleccione Role por usuario</h4>
    @Html.DropDownList("RoleId", "No Roles")
    <div class="form-actions no-color">
        <input type="submit" value="Crear" class="btn" />
    </div>
</fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
