@model IEnumerable<Flex_SGM.Models.CReclamos>
@{
    Layout = "~/Views/Shared/_LayoutC.cshtml";
}
@{
    ViewBag.Title = "Reclamos";
}
<div class="clearfix">
    @using (Html.BeginForm())
    {
        <div class="col-xs-12 ">
            <center><h2>Reclamos</h2></center>
            <div class="x_panel">

                <div class="x_title clearfix">
                    <div class="col-xs-12">
                        <div class="col-xs-6">
                            <div class="input-daterange input-group col-lg-offset-2 col-xs-10" id="bs_datepicker_range_container">

                                <label for="FechaInicial">Fecha Inicial...</label>
                                <input type="text" class="form-control" name="dti" value=@ViewBag.datei autocomplete="off">

                                <span class="input-group-addon">- A -</span>

                                <label for="FechaFinal">Fecha Final...</label>
                                <input type="text" class="form-control" name="dtf" value=@ViewBag.datef autocomplete="off">

                            </div>
                        </div>

                        <div class="form-group col-xs-2">
                            <label for="tipor">Mostrar por:</label>
                            <div class="col-md-10" data-toggle="tooltip" title=" Mostrar Resultados divididos por...">
                                @Html.DropDownList("btn", null, htmlAttributes: new { @class = "form-control" })

                            </div>
                        </div>

                        <div class="form-group col-xs-2" data-toggle="tooltip" title="Usa la Tecla *Ctrl del Teclado para seleccionar multiples opciones...">
                            <label for="tipor">Filtrar por Reclamo:</label>
                            <div class="col-md-10">
                                @Html.DropDownList("tipor", null, htmlAttributes: new { @class = "form-control", multiple = "true" , id="multiple"})

                            </div>
                        </div>
                        <div class="form-group col-xs-2">
                            <label for="tipor">Pareto por:</label>
                            <div class="col-md-10" data-toggle="tooltip" title=" Filtro para el pareto ">
                                @Html.DropDownList("paret", null, htmlAttributes: new { @class = "form-control" })

                            </div>
                        </div>


                    </div>

                </div>
                <div class="x_content">
                    <center>

                        <div class="col-lg-offset-3 col-xs-9">

                            @Html.ActionLink("Menu Calidad", "Index", "Calidad", null, htmlAttributes: new { @class = "btn btn-default", @onclick = "$('#loadingImg').show();" })

                            <input class="btn btn-primary col-xs-2" onclick="$('#loadingImg').show();" type="submit">


                            <div class="col-xs-2">
                                @Html.ActionLink("Registrar nuevo reclamo", "Create", null, new { @class = "btn btn-danger", @onclick = "$('#loadingImg').show();" })
                            </div>

                        </div>
                    </center>
                </div>
            </div>

        </div>
    }
    <div class="col-xs-8" style="float:left">
        <div class="x_panel">
            <div class="x_title clearfix">
                <h2> Reclamos del @ViewBag.dx</h2>
            </div>
            <div class="x_content">
                <canvas id="chartme" width="100" height="35"></canvas>
            </div>
        </div>
    </div>

    <div class="col-xs-4" style="float:left">
        <div class="x_panel">
            <div class="x_title clearfix">
                <h2> Pareto</h2>
            </div>
            <div class="x_content">
                <canvas id="charttimee" width="100" height="74"></canvas>
            </div>
        </div>
    </div>


    <div class="col-xs-12 ">
        <div class="x_panel">
            <div class="x_title clearfix">
                <h2> Lista de Reclamos del @ViewBag.dx</h2>
            </div>
            <div class="x_content ">
                <table class="table table-bordered table-striped clearfix" style="width:100%" id="tableq">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Fecha)
                            </th>
                            <th>Menu</th>
                            <th>
                                @Html.DisplayNameFor(model => model.Oficial)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IngCalidad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NoReclamoCliente)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NoReclamoFNG)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NoParte)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Descripcionpz)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Defecto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cliente)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Planta)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.costo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PLM)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cantidadpz)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Proceso)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Comentarios)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.a1d)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.a5d)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.a10d)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.a20d)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.a30d)
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @item.Fecha.ToString("yyyy/MM/dd")
                                </td>
                                <td>
                                    @Html.ActionLink("Exportar", "ExportFormat", new { id = item.ID }, new { @class = "btn btn-success", @target = "_blank" })
                                    @Html.ActionLink("Detalles", "Details", new { id = item.ID }, new { @class = "btn  btn-primary", @target = "_blank" })
                                    @Html.ActionLink("Editar", "Edit", new { id = item.ID }, new { @class = "btn  btn-warning", @target = "_blank" })
                                    @Html.ActionLink("Borrar", "Delete", new { id = item.ID }, new { @class = "btn  btn-danger" })
                                </td>
                                <td>
                                    @if (@item.Oficial == true)
                                    {
                                        <div>Oficial</div>
                                    }
                                    else
                                    {
                                        <div>No Oficial</div>
                                    }

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IngCalidad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NoReclamoCliente)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NoReclamoFNG)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NoParte)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descripcionpz)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Defecto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cliente)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Planta)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.costo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PLM)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cantidadpz)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Proceso)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Comentarios)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.a1d)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.a5d)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.a10d)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.a20d)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.a30d)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

@section Scripts {

    <script>

        var barChartqe =
        {
              labels: [@Html.Raw(ViewBag.labelsgrap)],
            datasets: [
                {
                    type: 'line',
                    label: 'Tendencia',
                    data:[@ViewBag.data2sgrap],
                    backgroundColor: "#8CB06B",
                    borderColor: "#aa0909",
                    borderWidth: 2,
                    fill: false
                }
                ,
                {
                    type: 'bar',
                    label: 'Eventos por @ViewBag.dxx',
                    data: [@ViewBag.datasgrap],
                    backgroundColor: "#FFA500",
                    borderWidth: 2
                }]
        };
        var barChartDqe1 =
        {
              labels: [@Html.Raw(ViewBag.labelsgrap2)],
            datasets: [
                {
                    type: 'line',
                    label: 'Porcentaje acumulado',
                    data:[@ViewBag.data2sgrap2],
                    backgroundColor: "#8CB06B",
                    borderColor: "#aa0909",
                    borderWidth: 2,
                    fill: false
                }
                ,
                {
                    type: 'bar',
                    label: 'Reclamos',
                    data: [@ViewBag.datasgrap2],
                    backgroundColor: "#6B8CB0",
                    borderWidth: 2
                }

            ]
        };


        $(document).ready(function () {

            $("#multiple").chosen();

            $('[data-toggle="tooltip"]').tooltip();

              $('#tableq').DataTable({
                "dom": 'lBfrtip',
                "lengthMenu": [[5, 15, 50, -1], ["5", "15", "50", "Todos"]],
                   "buttons": ['copy', 'csv','print','pdf','excel'],
                "order": [[0, "desc"]],
                "scrollX": true,
                "language": {
                    "sProcessing": "Procesando...",
                    "sLengthMenu": "Mostrar _MENU_ registros",
                    "sZeroRecords": "No se encontraron resultados",
                    "sEmptyTable": "Ningún dato disponible en esta tabla =(",
                    "sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                    "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                    "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                    "sInfoPostFix": "",
                    "sSearch": "Buscar:",
                    "sUrl": "",
                    "sInfoThousands": ",",
                    "sLoadingRecords": "Cargando...",
                    "oPaginate": {
                        "sFirst": "Primero",
                        "sLast": "Último",
                        "sNext": "Siguiente",
                        "sPrevious": "Anterior"
                    },
                    "oAria": {
                        "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                        "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                    },
                    "buttons": {
                        "copy": "Copiar",
                        "colvis": "Visibilidad"
                    }
                }
            });


            var ctqx = document.getElementById('chartme');
            var myChartqe1 = new Chart(ctqx, {
                type: 'bar',
                data: barChartqe,
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            });

                var ctqx1 = document.getElementById('charttimee');
                var myChartqe1 = new Chart(ctqx1, {
                    type: 'bar',
                    data: barChartDqe1,
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        scales: {
                            yAxes: [{
                                ticks: {
                                    beginAtZero: true
                                }
                            }]
                        },
                        legend: {
                            labels: {
                                // This more specific font property overrides the global property
                                fontColor: 'black',
                                defaultFontSize: 25,
                            }
                        }
                    }
                });


        });
    </script>

}
