<!DOCTYPE html>
<html>
<head>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="x-ua-compatible" content="IE=11">
    <link rel="shortcut icon" href="~/favicon.ico">
    <title>@ViewBag.Title - Automatizacion</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fcc")
    <!-- View specific styles -->
    @RenderSection("styles", required: false)

</head>
<body>
    <!-- Page Pre Loader -->
    <div class="page-loader-wrapper" id="loadingImg">
        <div class="loader">
            <p>Se Ha Enviando la Solicitud al Servidor...</p>
            <p>Esperando Respuesta...</p>
            <div class="preloader">
                <img src="~/loading2.gif" />
            </div>
        </div>
    </div>
    <!-- #END# Page Loader -->
    <section class="content">
        <section id="Nav">

            <div class="navbar navbar-default navbar-fixed-top">
                <div class="container">

                    <a href="@Url.Action("Index", "Home")" class="navbar-brand collapse in navHeaderCollapse">
                        <img alt="FLEX-N-GATE" src="~/img/FNG_Logo.svg" width="195" height="45">
                    </a>

                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navHeaderCollapse" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    <div class="collapse navbar-collapse navHeaderCollapse noover">
                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    Ingenieria
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu2">

                                    <li>@Html.ActionLink("-", "Index", "pcrs")</li>
                                    <li>@Html.ActionLink("PCRs", "Index", "pcrs", null, htmlAttributes: new { @onclick = "$('#loadingImg').show();" })</li>
                                    <li>@Html.ActionLink("Pcr Originators", "Index", "eoriginators", null, htmlAttributes: new { @onclick = "$('#loadingImg').show();" })</li>
                                    <li>@Html.ActionLink("Pcr Reasons", "Index", "ereasons", null, htmlAttributes: new { @onclick = "$('#loadingImg').show();" })</li>                      
                                </ul>
                            </li>


                            <li> @Html.Partial("_LoginPartial")</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div id="Nav2">
                <div class=" navbar-fixed-top">
                    <div class="container">
                        <a href="@Url.Action("Index", "Home")" class="navbar-text navbar-right Divider-Vertical-2"> Automatizacion</a>
                        <a href="@Url.Action("Index", "Home")" class="navbar-text navbar-right Divider-Vertical-2"> Mantenimiento</a>
                        <a href="@Url.Action("Index", "Home")" class="navbar-text navbar-right Divider-Vertical-2"> Calidad</a>
                        <div class="navbar-brand">
                            <p class="FNG_Blue"> Our Story</p>
                        </div>
                    </div>
                </div>
            </div>


            <div id="Nav3">
                <div class="navbar-fixed-top">
                    <div class="col-md-12">
                        <h3>Where Solutions are Built</h3>
                    </div>
                </div>
            </div>

            <div id="Nav4">
                <div class="navbar-fixed-top">
                    <div class="col-tp-12">
                        <a href="https://www.flex-n-gate.com/PDF/COVID-19%20HR%20Communication.pdf">
                            <img src="~/img/COVID-19.jpg" width="900" height="39
		  ">
                        </a>
                    </div>
                </div>
            </div>

        </section>
        <div class="container body-content clearfix">
            @RenderBody()
            <hr />

            <div class="Footer FooterLower clearfix">
                <div class="container text-center">
                    <img src="~/img/Logos_small-07.png" class="Footerpadding-right">
                    Flex-N-Gate México, S. De R.L. De C.V.
                    <img src="~/img/Logos_small-05.png" class="Footerpadding-left"> <!-- <img src="img/Logos_small-06.png" class="Footerpadding-left"/> -->
                </div>
                <div class="container text-center">
                    <p>&copy; @DateTime.Now.Year - Automatizacion Flex|N|Gate Mexico</p>
                </div>
            </div>
        </div>
    </section>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/fcj")
    @RenderSection("scripts", required: false)
</body>
</html>