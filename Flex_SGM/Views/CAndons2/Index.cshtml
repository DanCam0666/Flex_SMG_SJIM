@model IEnumerable<Flex_SGM.Models.CAndon2>
    
@{
    ViewBag.Title = "Andons";
      Layout = "~/Views/Shared/_LayoutC.cshtml";
}
<div class="clearfix">
    @using (Html.BeginForm())
    {
        <div class="col-md-12 ">
            <center><h2>Andon's</h2></center>
            <div class="x_panel">
                <div class="x_title clearfix">
                    <div class="col-md-12">
                        @Html.ActionLink("Menu Calidad", "Index", "Calidad", null, htmlAttributes: new { @class = "btn btn-default", @onclick = "$('#loadingImg').show();" })

                        <div class="col-md-6">
                            <div class="input-daterange input-group col-lg-offset-2 col-md-10" id="bs_datepicker_range_container">

                                <label for="FechaInicial">Fecha Inicial...</label>
                                <input type="text" class="form-control" name="dti" value=@ViewBag.datei autocomplete="off">

                                <span class="input-group-addon">- A -</span>

                                <label for="FechaFinal">Fecha Final...</label>
                                <input type="text" class="form-control" name="dtf" value=@ViewBag.datef autocomplete="off">

                            </div>
                        </div>
                        <div class="form-group col-md-2">
                            <label for="tipor">Mostrar por:</label>
                            <div class="col-md-10" data-toggle="tooltip" title=" Filtro para el pareto ">
                                @Html.DropDownList("btn", null, htmlAttributes: new { @class = "form-control" })

                            </div>
                        </div>
                        <div class="form-group col-md-2" >
                            <label for="tipor">Pareto por:</label>
                            <div class="col-md-10" data-toggle="tooltip" title=" Filtro para el pareto ">
                                @Html.DropDownList("paret", null, htmlAttributes: new { @class = "form-control" })

                            </div>
                        </div>


                    </div>

                </div>
                <div class="x_content">
                    <center>
                        <div class="col-md-12">

                            <input class="btn btn-primary col-md-2" onclick="$('#loadingImg').show();" type="submit">
                            <div class="col-md-2">
                                @Html.ActionLink("Registrar nuevo Andon", "Create", null, new { @class = "btn btn-danger", @onclick = "$('#loadingImg').show();" })
                            </div>
                            <div class="col-md-6">
                                @Html.ActionLink("Clientes", "Index", "cClientes", null, htmlAttributes: new { @class = "btn btn-default", @onclick = "$('#loadingImg').show();" })
                                @Html.ActionLink("Proyectos", "Index", "cProyectos", null, htmlAttributes: new { @class = "btn btn-default", @onclick = "$('#loadingImg').show();" })
                                @Html.ActionLink("Areas", "Index", "cAreas", null, htmlAttributes: new { @class = "btn btn-default", @onclick = "$('#loadingImg').show();" })
                                @Html.ActionLink("Defectos", "Index", "AndonDefectoes", null, htmlAttributes: new { @class = "btn btn-default", @onclick = "$('#loadingImg').show();" })
                                @Html.ActionLink("Supervisores", "Index", "AndonSupervisores", null, htmlAttributes: new { @class = "btn btn-default", @onclick = "$('#loadingImg').show();" })
                                @Html.ActionLink("Auditores", "Index", "AndonAuditors", null, htmlAttributes: new { @class = "btn btn-default", @onclick = "$('#loadingImg').show();" })
                            </div>
                        </div>
                    </center>
                </div>
            </div>

        </div>
    }
    <div class="col-md-8" style="float:left">
        <div class="x_panel">
            <div class="x_title clearfix">
                <h2> Andons del @ViewBag.dx</h2>
            </div>
            <div class="x_content">
                <canvas id="chartme" width="100" height="35"></canvas>
            </div>
        </div>
    </div>

    <div class="col-md-4" style="float:left" data-toggle="modal" data-target="#myModal">
        <div class="x_panel">
            <div class="x_title clearfix">
                <h2> Pareto<small> <a href="/bitacora/Evidence/Quality/Estandar/Lista de defectos por area.pdf" target="_blank">Lista de Codigos de Clasificacion</a></small></h2>
            </div>
            <div class="x_content">
                <canvas id="charttimee" width="100" height="74"></canvas>
            </div>
        </div>
    </div>

    <div class="col-md-12 ">
        <div class="x_panel">
            <div class="x_title clearfix">
                <h2> Lista de Andons del @ViewBag.dx</h2>
            </div>
            <div class="x_content ">
                <table class="tabled table-bordered table-striped clearfix" style="width:100%" id="tableq">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ID)
                            </th>
                            <th>Menu</th>
                            <th>
                                @Html.DisplayNameFor(model => model.Fecha)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Turno)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Hora)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.lote)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AreasgID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AndonSupervisores.Supervisor)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AreaseID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AndonAuditor.Auditor)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Clientes.Cliente)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Proyectos.Proyecto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NoDeParte)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NombreDeParte)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AndonDefecto.Defecto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cantidadpz)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Comentarios)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EstatusAndon)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Esproblema)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Esproblemaseguridad)
                            </th>
                            <th>
                                @Html.Label("El problema es Repetitivo")
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.a1why)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.a2why)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.a3why)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.a4why)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.a50d)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Causas)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Acciones)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.ActionLink("Exportar", "ExportFormat", new { id = item.ID }, new { @class = "btn btn-success", @target = "_blank" })
                                @Html.ActionLink("Detalles", "Details", new { id = item.ID }, new { @class = "btn  btn-primary", @target = "_blank" })
                                @Html.ActionLink("Editar", "Edit", new { id = item.ID }, new { @class = "btn  btn-warning", @target = "_blank" })
                                @Html.ActionLink("Borrar", "Delete", new { id = item.ID }, new { @class = "btn  btn-danger" })
                            </td>
                            <td>
                                @item.Fecha.ToString("yyyy/MM/dd")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Turno)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Hora)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.lote)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Primary.Area)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AndonSupervisores.Supervisor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Assigned.Area)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AndonAuditor.Auditor)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Clientes.Cliente)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Proyectos.Proyecto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NoDeParte)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreDeParte)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AndonDefecto.Defecto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cantidadpz)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Comentarios)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.EstatusAndon)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Esproblema)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Esproblemaseguridad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Esproblemavario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.a1why)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.a2why)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.a3why)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.a4why)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.a50d)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Causas)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Acciones)
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>


<div class="modal" id="myModal" role="dialog">
    <div class="modal-content">
        <div class="modal-header"  data-dismiss="modal">PARETO</div>
        <div class="modal-body"  data-dismiss="modal">
            <canvas id="charttimeepareto"></canvas>
        </div>
        <div class="modal-footer"  data-dismiss="modal">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>
@section Scripts {

    <script>

                                Chart.defaults.global.defaultFontSize= 18;
                    Chart.helpers.merge(Chart.defaults.global.plugins.datalabels, {
                           align: 'top',
                        anchor: 'center',
                           clam:'true',
                        offset: 0,
                           color: '#000000'
});

        var barChartqe =
        {
              labels: [@Html.Raw(ViewBag.labelsgrap)],
            datasets: [
                {
                    type: 'line',
                    label: 'Tendencia',
                    data:[@ViewBag.data2sgrap],
                    backgroundColor: "#8CB06B",
                    borderColor: "#aa0909",
                    borderWidth: 2,
                    fill: false
                }
                ,
                {
                    type: 'bar',
                    label: 'Eventos por @ViewBag.dxx',
                    data: [@ViewBag.datasgrap],
                    backgroundColor: "#FFA500",
