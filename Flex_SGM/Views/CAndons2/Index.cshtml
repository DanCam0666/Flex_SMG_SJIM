                    fill: false
                }
                ,
                {
                    type: 'bar',
                    label: 'Andons',
                    data: [@ViewBag.datasgrap2],
                    backgroundColor: "#6B8CB0",
                    borderWidth: 2
                }

            ]
        };


        $(document).ready(function () {

            $("#paret").change(function () {
    $.ajax({
        type: 'POST',
        url: '@Url.Action("paretoasync")',
        dataType: 'json',
        data: { id: $("#paret").val() },
        success: function (result) {


        },
        error: function (ex) {
            alert('Failed to retrieve Defectos : ' + ex);
        }
    });
    return false;
})





            var ctqx = document.getElementById('chartme');
            var myChartqe1 = new Chart(ctqx, {
                type: 'bar',
                data: barChartqe,
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            });

                var ctqx1 = document.getElementById('charttimee');
                var myChartqe2 = new Chart(ctqx1, {
                    type: 'bar',
                    data: barChartDqe1,
                    options: {
