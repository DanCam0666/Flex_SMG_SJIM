<!DOCTYPE html>
<html>
<head>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/favicon.ico">
    <title>@ViewBag.Title - Automatizacion</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fcc")
    <!-- View specific styles -->
    @RenderSection("styles", required: false)

</head>
<body>
    <!-- Page Loader -->
    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="preloader">
                <div class="spinner-layer pl-red">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
            <p>Procesando Solicitud...</p>
        </div>
    </div>
    <!-- #END# Page Loader -->
    <section class="content">
        <section id="Nav">

            <div class="navbar navbar-default navbar-fixed-top">
                <div class="container">

                    <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                        <img alt="FLEX-N-GATE" src="~/img/FNG_Logo.svg" width="195" height="45">
                    </a>

                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navHeaderCollapse" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    <div class="collapse navbar-collapse navHeaderCollapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="http://T1XX/MONITOR">Prueba Ensamble</a></li>
                            <li>@Html.ActionLink("Bitacora", "Index", "Bitacoras")</li>
                            <li>@Html.ActionLink("OILs", "Index", "OILs")</li>
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    ---
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu2">
                                    <li>@Html.ActionLink("-", "Index", "Home")</li>
                                    <li>@Html.ActionLink("-", "Index", "Home")</li>
                                    <li>@Html.ActionLink("-", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Requisiciónes", "Working", "Home")</li>
                                    <li>@Html.ActionLink("Almacen", "Working", "Home")</li>
                                    <li>@Html.ActionLink("Fallas", "Index", "Fallas")</li>
                                </ul>
                            <li> @Html.Partial("_LoginPartial")</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div id="Nav2">
                <div class=" navbar-fixed-top">
                    <div class="container">
                        <a href="@Url.Action("Index", "Home")" class="navbar-text navbar-right Divider-Vertical-2"> FlexNGate</a>
                        <a href="@Url.Action("Index", "Home")" class="navbar-text navbar-right Divider-Vertical-2"> Automatizacion</a>
                        <a href="@Url.Action("Index", "Home")" class="navbar-text navbar-right Divider-Vertical-2"> Ensamble</a>
                        <a href="@Url.Action("Index", "Home")" class="navbar-text navbar-right Divider-Vertical-2"> MetalFinish</a>
                        <a href="@Url.Action("Index", "Home")" class="navbar-text navbar-right Divider-Vertical-2"> Soldadura</a>
                        <a href="@Url.Action("Index", "Home")" class="navbar-text navbar-right Divider-Vertical-2"> Estampado</a>
                        <a href="@Url.Action("Index", "Home")" class="navbar-text navbar-right Divider-Vertical-2"> Servicios</a>
                        <div class="navbar-brand">
                            <p class="FNG_Blue"> Our Story</p>
                        </div>
                    </div>
                </div>
            </div>


            <div id="Nav3">
                <div class="navbar-fixed-top">
                    <div class="col-md-12">
                        <h3>Where Solutions are Built</h3>
                    </div>
                </div>
            </div>
        </section>
        <div class="container body-content clearfix">
            @RenderBody()
            <hr />

            <div class="Footer FooterLower clearfix">
                <div class="container text-center">
                    <img src="~/img/Logos_small-07.png" class="Footerpadding-right">
                    Flex-N-Gate México, S. De R.L. De C.V.
                    <img src="~/img/Logos_small-05.png" class="Footerpadding-left"> <!-- <img src="img/Logos_small-06.png" class="Footerpadding-left"/> -->
                </div>
                <div class="container text-center">
                    <p>&copy; @DateTime.Now.Year - Automatizacion Flex|N|Gate Mexico</p>
                </div>
            </div>
        </div>
    </section>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/fcj")
    @RenderSection("scripts", required: false)
</body>
</html>