<br />

END

@section Scripts {

    <script>
                      //  Chart.defaults.global.defaultFontSize= 18;
                    Chart.helpers.merge(Chart.defaults.global.plugins.datalabels, {
                           align: 'end',
                           anchor: 'end',
                        offset: 1,
                           color: '#6B8CB0'
});
                var barChartData =
            {
                   labels: [@Html.Raw(ViewBag.Objet1)], //the names displayed on the x-axis, see images below
                // labels: ['a','b','c','d','e','f',], //the names displayed on the x-axis, see images below
                    datasets: [
                                                {
				type: 'line',
				label: 'Porcentaje acumulado',
               data: [@ViewBag.Data11],
                backgroundColor: "#8CB06B",
                borderColor: "#aa0909",
                borderWidth: 2,
				fill: false
                    }
                  ,
                        {
                             type: 'bar',
                    label: 'Suma fallas',
                     data: [@ViewBag.Data1],
                    backgroundColor: "#f990a7",
                    borderWidth: 2
                }]
            };
          var barChartData2 =
            {
                   labels: [@Html.Raw(ViewBag.Objet2)], //the names displayed on the x-axis, see images below
                // labels: ['a','b','c','d','e','f',], //the names displayed on the x-axis, see images below
              datasets: [
                        {
				type: 'line',
				label: 'Porcentaje acumulado',
               data: [@ViewBag.Data21],
                backgroundColor: "#8CB06B",
                borderColor: "#aa0909",
                borderWidth: 2,
				fill: false
                    }
                  ,
                  {
                      type: 'bar',
                    label: 'Suma de Tiempo por falla',
                     data: [@ViewBag.Data2],
                    backgroundColor: "#6B8CB0",
                    borderWidth: 2
                }

                ]
        };

          var barChartDatametricos =
            {
                   labels: [@Html.Raw(ViewBag.Objet11)], //the names displayed on the x-axis, see images below
                // labels: ['a','b','c','d','e','f',], //the names displayed on the x-axis, see images below
              datasets: [
                        {
				label: 'MTBF',
               data: [@ViewBag.Dat11],
                backgroundColor: "#8CB06B",
                borderColor: "#aa0909",
                borderWidth: 2,
				fill: false
                    }
                ]
        };
                  var barChartDatametricos2 =
            {
                   labels: [@Html.Raw(ViewBag.Objet21)], //the names displayed on the x-axis, see images below
                // labels: ['a','b','c','d','e','f',], //the names displayed on the x-axis, see images below
              datasets: [
                        {
				label: 'MTTR',
               data: [@ViewBag.Dat21],
                backgroundColor: "#8CB06B",
                borderColor: "#aa0909",
                borderWidth: 2
                    }
                ]
        };

        $(document).ready(function () {
           var ctx = document.getElementById('chartfails');
           var myChart1 = new Chart(ctx, {
    type: 'bar',
    data:barChartData,
    options: {
        responsive: true,
        maintainAspectRatio: true,
                scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        }
    }
});

          var ctx2 = document.getElementById('charttime');
           var myChart2 = new Chart(ctx2, {
    type: 'bar',
    data:barChartData2,
    options: {
        responsive: true,
        maintainAspectRatio: true,
                scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        }
    }
});


          var ctxm = document.getElementById('chartm');
           var myChart3 = new Chart(ctxm, {
    type: 'bar',
    data:barChartDatametricos,
    options: {
        responsive: true,
        maintainAspectRatio: true,
                scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        }
    }
});

          var ctxm2 = document.getElementById('chartm2');
           var myChart4 = new Chart(ctxm2, {
    type: 'bar',
    data:barChartDatametricos2,
    options: {
        responsive: true,
        maintainAspectRatio: true,
                scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        }
    }
});
        });
    </script>

}
