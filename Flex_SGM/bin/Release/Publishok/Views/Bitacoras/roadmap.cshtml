
@{
    ViewBag.Title = "Bitacora";
}
<br />
<br />
<div class="col-xs-6 clearfix">
    <div class="x_panel">
        <div class="x_title">
            Rolling MTTR
        </div>
        <div class="x_content">
            <canvas id="chartm2" width="100" height="44"></canvas>
        </div>
    </div>
    <div class="x_panel">
        <div class="x_title">
            Rolling MTBF
        </div>
        <div class="x_content">
            <canvas id="chartm" width="100" height="44"></canvas>
        </div>
    </div>
</div>

<div class="col-xs-6 clearfix">
    <div class="x_panel">
        <div class="x_title">
            Pareto Suma Tiempo Fallas
        </div>
        <div class="x_content">
            <canvas id="charttime" width="100" height="44"></canvas>
        </div>
    </div>
    <div class="x_panel">
        <div class="x_title">
            Pareto Cantidad Fallas
