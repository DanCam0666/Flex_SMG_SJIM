@model Flex_SGM.Models.ApplicationUser
@{
    ViewBag.Title = "Edit";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @Html.HiddenFor(model => model.Id)


<fieldset class="form-horizontal" style="max-width: 200px; margin: auto;">
    <legend>Edit a user.</legend>
    <div class="control-group">
        @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(m => m.UserName)
        </div>
    </div>
    <div class="control-group">
        @Html.LabelFor(m => m.UserFullName, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(m => m.UserFullName)
        </div>
    </div>
    <div class="control-group">
        @Html.LabelFor(m => m.Nomina, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(m => m.Nomina)
        </div>
    </div>

    <div class="control-group">
        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(m => m.Email)
        </div>
    </div>
    <div class="control-group">
        @Html.LabelFor(m => m.Puesto, new { @class = "control-label" })
        <div class="controls">
            @Html.DropDownList("Puesto", null, "--Seleccione--", htmlAttributes: new { @class = "control" })
        </div>
    </div>
    <div class="control-group">
        @Html.LabelFor(m => m.Area, new { @class = "control-label" })
        <div class="controls">
            @Html.DropDownList("Area", null, "--Seleccione--", htmlAttributes: new { @class = "control" })
        </div>
    </div>
    <hr />
    <h4>Modify Role for User</h4>
    <hr />
    <div class="switch">
        <label><input type="checkbox" name="deleteroles" value=true>Borrar Roles</label>
    </div>
    <hr />
    @Html.DropDownList("RoleId", "No Roles")
    <div class="form-actions no-color">
        <input type="submit" value="Edit" class="btn" />
    </div>
</fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
